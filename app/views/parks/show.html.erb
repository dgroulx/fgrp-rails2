<% content_for :section, "parks show" %>

<div class='park'>
  <p class='name'>
    <b>Name:</b>
    <%=h @park.name %>
  </p>

  <p class='address'>
    <b>Address:</b>
    <%=h @park.address %>
  </p>
  
  <p class='vimeo_embed'>
    <b>Vimeo Embed</b>
    <%= @park.vimeo_embed %>
  </p>
  
  <p class='park_size'>
    <b>Park size:</b>
    <%=h @park.park_size %>
  </p>
  
  <p class='history'>
    <b>History:</b>
    <%= @park.history %>
  </p>
  
  <div class="flickr-pool-slideshow" data-groupid="<%= @park.flickr_pool_id %>">
  </div>
  
  <p class='contact_info'>
    <b>Contact info:</b>
    <%= @park.contact_info %>
  </p>
  <ul class='amenities'>
    <% @park.park_amenities.each do |amenity| %>
      <li class='amenity'>
        <span class='name'>
          <%= amenity.name %>
        </span>
        <span class='description'>
          <%= amenity.description %>
        </span>
      </li>
    <% end %>
  </ul>
</div>

<div class="simple_map" data-latitude="<%= @park.latitude %>" data-longitude="<%= @park.longitude %>">
</div>

<%= link_to 'Edit', edit_park_path(@park) %> |
<%= link_to 'Back', parks_path %>
