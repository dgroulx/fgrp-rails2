<% section "parks index" %>
<%= render :partial=>"shared/searchmap"%>
<h1>Listing parks</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @parks.each do |park| %>
  <tr class="park">
    <td><%=h park.name %></td>
    <td><%= link_to 'Show', park %></td>
    <td><%= link_to 'Edit', edit_park_path(park) %></td>
    <td><%= link_to 'Links', park_links_path(park) %></td>
    <td><%= link_to 'Destroy', park, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New park', new_park_path %>
